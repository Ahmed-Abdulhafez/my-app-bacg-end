{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/products/(.*)", "dest": "/app.js" },
    { "src": "/category/(.*)", "dest": "/app.js" },
    { "src": "/users/(.*)", "dest": "/app.js" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/(.*)", "dest": "/client/build/index.html" }
  ]
}
